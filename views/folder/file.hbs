{{#if name}}
<h1>Edit File</h1>
{{else}}
<h1>New File</h1>
{{/if}}

{{#if error}}
<p>{{error}}</p>
{{/if}}
<form action="" method="POST" encType="multipart/form-data">
    <p>Name: <input type="text" name="name" value={{name}}></input></p>
    <p>File: <input type="file" name="document" /></p>
    <button type="submit">Create</button>
</form>

<a href="/folder/list/{{rootid}}">Cancel</a>
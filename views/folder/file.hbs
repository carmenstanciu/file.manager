<body class="mdl-demo mdl-color--grey-100 mdl-color-text--grey-700 mdl-base">
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header mdl-layout__header--scroll mdl-color--primary">
            <div class="mdl-layout__header-row">
                <h3>Managementul documentelor</h3>
                <div class="mdl-layout-spacer"></div>
                <nav class="mdl-navigation">
                    <a class="mdl-navigation__link" href="/account/logout">Ieșire din cont</a>
                </nav>
            </div>
            <div class="mdl-layout__tab-bar mdl-js-ripple-effect mdl-color--primary-dark">
                <a class="mdl-layout__tab is-active" href="/folder/list">Fisierele mele</a><br />
                <a class="mdl-layout__tab" href="/user">Pagina personală</a><br />
            </div>
        </header>
        <main class="mdl-layout__content">
            <div class="mdl-layout__tab-panel is-active login">
                <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
                    <div class="mdl-card mdl-cell mdl-cell--12-col">
                        <form action="" method="POST" encType="multipart/form-data">
                            <div class="mdl-card__supporting-text">
                                {{#if name}}
                                <h4 class="mdl-card__title-text">Modifică Fișier</h4>
                                {{else}}
                                <h4 class="mdl-card__title-text">Fișier Nou</h4>
                                {{/if}}
                                <p>Dacă nu modifici documentul va ramâne același</p>
                                {{#if error}}
                                <p class="error">{{error}}</p>
                                {{/if}}
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    <input class="mdl-textfield__input" type="text" name="name" id="name"
                                        value="{{name}}">
                                    <label class="mdl-textfield__label" for="name">Denumire</label>
                                </div>
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--file" style="display:block;">
                                    <input class="mdl-textfield__input" placeholder="Document" type="text"
                                        id="uploadFile" readonly />
                                    <div class="mdl-button mdl-button--primary mdl-button--icon mdl-button--file">
                                        <i class="material-icons">attach_file</i><input type="file" name="document"
                                            id="uploadBtn">
                                    </div>
                                </div>
                            </div>
                            <div class="mdl-card__actions mdl-card--border">
                                {{#if name}}
                                <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                                    Modifică
                                </button>
                                {{else}}
                                <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                                    Crează
                                </button>
                                {{/if}}
                                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect right"
                                    href="/folder/list/{{rootid}}">Anulează</a>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
            {{>footer}}
        </main>
        <script>
            document.getElementById("uploadBtn").onchange = function () {
                document.getElementById("uploadFile").value = this.files[0].name;
            };
            document.getElementById('name').focus();
        </script>
    </div>
</body>